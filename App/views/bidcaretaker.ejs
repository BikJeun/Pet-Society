<!DOCTYPE html>
<html>
  <head>
		<!-- Page Title -->
    <title>Select care taker for bid</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
		
		<!-- CSS for Styling -->
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
		
		<!-- JavaScript for Interactivity -->
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

		<!-- ADDED JavaScript -->
 
    
  </head>
  <body>
    <% if (type == 1) { %>
    <h1>Select full time Caretaker</h1>
    <h2 style="text-align: center; text-decoration: underline;">Full Time Care Takers</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Caretaker Name</th>
          <th scope="col">Address</th>
          <th scope="col">Average Rating</th>
          <th scope="col">Price (per day)</th>
        </tr>
      </thead>
      <tbody>
        <% if (caretaker.length == 0) { %>
          <tr><td colspan="5" style="text-align: center; color: darkgrey">Sorry there are no caretakers available for that time period</td></tr>
          <% } else { %>
        <% for(var i=0; i<caretaker.length; i++) { if (caretaker[i].email == currentUserEmail) {continue;} %>
        <tr>
          <form>
            <td><%= i+1%></td>
            <td><%= caretaker[i].name%></td>
            <td><%= caretaker[i].address%></td>
            <% if (caretaker[i].rating) { %>
            <td><%= caretaker[i].rating%></td>
            <% } else { %>
            <td style="color: darkgrey;">No ratings yet</td>
            <% } %>
            <td><%= caretaker[i].price%></td>
          </form>
        </tr>
        <% }} %>
      </tbody>
    </table>
  
    <% }  else { %>

      <h1>Select part time Caretaker</h1>
      <h2 style="text-align: center; text-decoration: underline;">Part Time Care Takers</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Caretaker Name</th>
            <th scope="col">Address</th>
            <th scope="col">Average Rating</th>
      
          </tr>
        </thead>
        <tbody>
          <% if (caretaker.length == 0) { %>
            <tr><td colspan="4" style="text-align: center; color: darkgrey">Sorry there are no caretakers available for that time period</td></tr>
            <% } else { %>
          <% for(var i=0; i<caretaker.length; i++) { %>
          <tr>
            <form>
              <td><%= i+1%></td>
              <td><%= caretaker[i].name%></td>
              <td><%= caretaker[i].address%></td>
              <% if (caretaker[i].average) { %>
              <td><%= caretaker[i].average%></td>
              <% } else { %>
              <td style="color: darkgrey;">No ratings yet</td>
              <% } %>
      
            </form>
          </tr>
          <% }} %>
        </tbody>
      </table>
    <% } %>

    <form id="html_form" action="selectcaretaker" role="form" method="post">
      <div class="form-group">
        <label for="name">Caretaker no</label>
        <input class="form-control" id="no" name="no" placeholder="Enter Caretaker number (as displayed above)">
        <% if (type == 2) { %>
        <label for="name">Price</label>
        <input class="form-control" id="price" name="price" placeholder="Enter price (for total service)">
        <% } %>
        <div class="form-group">
          <p style="margin-top: 30px;">Transport agreement</p>
          <input type="radio" name="chooseone" value="DELIVER" checked><label for="DELIVER"> DELIVER</label><br>				
          <input type="radio" name="chooseone" value="PICKUP"><label for="PICKUP">  PICKUP</label><br>
          <input type="radio" name="chooseone" value="TRANSFER"><label for="TRANSFER">  TRANSFER</label><br>
        </div>	
      </div>
      <button type="submit" class="btn btn-primary">Proceed</button>
    </form>


    <form method="get" action="/home">
      <button style="margin-top: 10px;" type="submit" class="btn btn-primary">Cancel</button>
    </form>



		
  </body>
</html>
